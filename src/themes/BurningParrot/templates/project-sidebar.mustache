<div class="project-sidebar-header">
    <div class="project-sidebar-header-name">
        <div class="project-title-container">
            <a href="{{ project_link }}" class="project-sidebar-title">
                {{ project_name }}
            </a>
            <span class="project-title-spacer"></span>
            {{# has_administration_link }}
                <a href="{{ administration_link }}" class="project-administration-link"><i class="fas fa-cog" title="{{# gettext }}Project administration{{/ gettext }}"></i></a>
            {{/ has_administration_link }}
        </div>
        {{# privacy }}
            {{> sidebar/project-privacy }}
        {{/ privacy }}
    </div>
    {{# has_project_banner }}
        <button type="button" aria-labelledby="current-project-banner-message"
                class="project-sidebar-banner-button"
                id="current-project-banner-bullhorn"
                title="{{# gettext }}Show project announcement{{/ gettext }}"
        >
            <span class="project-sidebar-banner-button-icon">
                <i class="fas fa-bullhorn" aria-hidden="true"></i>
            </span>
            <span class="project-sidebar-banner-button-label">
                {{# gettext }}Project announcement{{/ gettext }}
            </span>
        </button>
    {{/ has_project_banner }}
    {{# has_project_flags }}
        <div class="project-sidebar-project-flags" id="project-sidebar-project-flags">
            <div class="project-sidebar-project-flags-icon">
                {{# glyph }}project-shield{{/ glyph }}
            </div>
            <span class="project-sidebar-project-flags-labels">
                {{# project_flags }}
                    <span class="project-sidebar-project-flags-label">{{ label }}</span>
                {{/ project_flags }}
            </span>
        </div>
    {{/ has_project_flags }}
</div>

<h2 class="project-sidebar-tools-section-label">{{# gettext }}Tools{{/ gettext }}</h2>

<nav class="project-sidebar-nav" data-test="project-sidebar" data-project-id="{{ project_id }}">
    {{# sidebar }}
            {{# is_project_defined }}
                <a href="{{{ link }}}"
                   aria-label="{{ label }}"
                   class="project-sidebar-nav-item"
                   {{# open_in_new_tab }}
                   target="_blank"
                   rel="noopener noreferrer"
                   {{/ open_in_new_tab }}
                   title="{{ description }}"
                >
                    <i class="{{ icon }} project-sidebar-nav-item-icon"></i>
                    <span class="project-sidebar-nav-item-label">{{ label }}</span>
                    {{# open_in_new_tab }}
                        <i class="fa fa-arrow-right project-sidebar-nav-item-new-tab"></i>
                    {{/ open_in_new_tab }}
                </a>
            {{/ is_project_defined }}
            {{^ is_project_defined }}
                <a id="{{ id }}"
                    href="{{{ link }}}"
                    class="project-sidebar-nav-item {{# enabled }}active{{/ enabled }}"
                    aria-label="{{{ name }}}"
                    title="{{{ name }}}"
                >
                    <i class="{{ icon }} project-sidebar-nav-item-icon"></i>
                    <span class="project-sidebar-nav-item-label">{{{ label }}}</span>
                </a>
            {{/ is_project_defined }}
    {{/ sidebar }}
</nav>

{{# is_sidebar_collapsable }}
    <i class="sidebar-collapser project-sidebar-collapser-icon sidebar-collapser-icon fa"
        title="Collapse sidebar"
        data-user-preference-name="sidebar_state"
        data-collapsed-class="sidebar-collapsed"
    ></i>
{{/ is_sidebar_collapsable }}
